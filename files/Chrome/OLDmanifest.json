{
  "manifest_version": 3,
  "name": "Resume Sync & Version Manager",
  "version": "1.0.0",
  "description": "Store your resume locally, track versions, and compare with LinkedIn and Handshake profiles",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.joinhandshake.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["js/linkedin-scraper.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.joinhandshake.com/*"],
      "js": ["js/handshake-scraper.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
